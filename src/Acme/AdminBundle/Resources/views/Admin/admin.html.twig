{% extends 'admin.html.twig' %}

{% block body %}
        <div id="page-wrapper">

            <div class="container-fluid">

                <div class="col-lg-12">
                    <h1 class="page-header">Dashboard</h1>
                </div>
                <!-- /.col-lg-12 -->
                <div class="col-lg-12">
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                            <i class="fa fa-bell fa-fw"></i>
                            Neueste Beiträge
                            </div>
                            <div class="panel-body">
                                <div class="list-group">
                                    {% for article in articles %}
                                        <a class="list-group-item" href="/admin/article/{{article.id}}">{{article.headline}}</a>
                                    {% endfor %}
                                </div>
                                <a class="btn btn-default btn-block" href="/admin/article/all">Alle Beiträge</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
                <!-- /.row -->
{% endblock %}  