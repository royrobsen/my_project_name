{% extends 'admin.html.twig' %}

{% block body %}
        <div id="page-wrapper">
       
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Beitrag bearbeiten</h1>
                    {{ form_start(form) }}
                    {{ form_errors(form) }}	
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="alert alert-info">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                    </div> 
                    <div class="col-lg-4"> 
                        <h4>{{ form_label(form.catName) }}</h4>
                         {{ form_widget(form.catName, { 'attr': {'class': 'form-control'} }) }}
                         <h4>{{ form_label(form.description) }}</h4>
                         {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'style':'resize: none;'} }) }}
                         <h4>{{ form_label(form.group) }}</h4>
                         {{ form_widget(form.group, { 'attr': {'class': 'form-control'} }) }}<br /><br />
                        {{ form_widget(form.save, { 'attr': {'class': 'btn btn-success'} }) }}
                    </div>
                        
                </div>
                    {{ form_end(form) }}
            </div>
            
        </div>
{% endblock %}  