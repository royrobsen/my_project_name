{% extends 'admin.html.twig' %}
{% block javascripts %}
<script src=" {{ asset('bundles/acmeadmin/js/controller/mediaController.js') }} "></script>
{% endblock %}
{% block body %}
        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Media/Bilder
                        </h1>
                        {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="alert alert-info">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-sm-6 col-lg-6 col-md-6">
                            <div class="thumbnail">
                                <img src="/uploads/{{path}}/{{file}}" class="img-responsive center-block" style="height: 500px; object-fit: contain;" />
                            </div>
                        </div>
                        <div class="col-sm-4 col-lg-4 col-md-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4>Eigenschaften</h4>
                                </div>
                                        <div class="panel-collapse collapse in">
                                            <div class="panel-body">
                                                {{ form_start(form) }}
                                                {{ form_errors(form) }}	
                                                
                                                {{ form_end(form) }}
                                            </div>
                                        </div>
                        </div>
                    </div>
                </div>        
        </div>
{% endblock %}  