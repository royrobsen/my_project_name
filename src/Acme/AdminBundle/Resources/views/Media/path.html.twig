{% extends 'admin.html.twig' %}
{% block javascripts %}
<script src=" {{ asset('bundles/acmeadmin/js/controller/mediaController.js') }} "></script>
{% endblock %}
{% block body %}
        <div id="page-wrapper">

            <div class="container-fluid" ng-controller='PaginationCtrl' ng-init="showData()">

                <!-- Page Heading -->
                <div class="row" ng-init="path='{{path}}'">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Media/Bilder
                        </h1>
                        <div class="col-lg-9">
                            <a href="/admin/media/new"><button class="btn btn-primary">Neues Bild</button>  </a>
                        </div>   
                        <div class="col-lg-3">
                            <div class="pagination pagination-center" style="margin-top: -20px !important;" ng-show="datalists.length">
                                <ul class="pagination">
                                    <li><button class="btn btn-primary" ng-disabled="curPage == 0" ng-click="curPage=curPage-1"> &lt; Zur√ºck</button></li>
                                    <li class="active"><button class="btn btn-default" >Seite [[curPage + 1]] von [[ numberOfPages() ]]</button></li>
                                    <li><button class="btn btn-primary" ng-disabled="curPage >= datalists.length/pageSize - 1" ng-click="curPage = curPage+1">Weiter &gt;</button></li>
                                </ul>      
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">   
                        <div class="col-sm-2 col-lg-2 col-md-2" ng-repeat="datalist in datalists | pagination: curPage * pageSize | limitTo: pageSize | filter:search" ng-class-odd="odd" ng-class-even="even">
                            <a href="/admin/media/{{path}}/[[ datalist ]]">
                            <div class="thumbnail">
                                <img src="/uploads/{{path}}/[[ datalist ]]" class="img-responsive center-block" style="height: 180px; object-fit: contain;" />
                            </div>
                            </a>
                        </div>
                    </div>
                </div>        
        </div>
{% endblock %}  