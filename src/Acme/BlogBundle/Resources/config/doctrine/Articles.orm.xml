<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Acme\BlogBundle\Entity\Articles" table="articles">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="headline" type="string" column="headline" length="70" nullable="false"/>
    <field name="articleContent" type="text" column="article_content" nullable="false"/>
    <field name="catId" type="integer" column="cat_id" nullable="false"/>
    <field name="access" type="integer" column="access" nullable="false"/>
    <field name="createdDate" type="datetime" column="created_date" nullable="false"/>
    <field name="createdBy" type="integer" column="created_by" nullable="false"/>
    <field name="modifiedDate" type="datetime" column="modified_date" nullable="false"/>
    <field name="modifiedBy" type="string" column="modified_by" length="50" nullable="false"/>
    <field name="alias" type="string" column="alias" length="50" nullable="false"/>
    <field name="status" type="integer" column="status" nullable="false"/>
    <field name="aufstellung" type="text" column="aufstellung" length="16777215" nullable="false"/>
    <field name="auswechselspieler" type="text" column="auswechselspieler" length="16777215" nullable="false"/>
    <field name="wechsel" type="text" column="wechsel" length="16777215" nullable="false"/>
    <field name="papierkorb" type="boolean" column="papierkorb" nullable="false"/>
    <many-to-one
        field="category"
        target-entity="Categories"
        inversed-by="articles"
        join-column="cat_name">
        
        <join-column name="cat_Id" referenced-column-name="id" />
    </many-to-one>
    <many-to-one
        field="author"
        target-entity="Users"
        inversed-by="articles"
        join-column="name, first_name">
        
        <join-column name="created_by" referenced-column-name="id" />   
    </many-to-one>   

  </entity>
</doctrine-mapping>
