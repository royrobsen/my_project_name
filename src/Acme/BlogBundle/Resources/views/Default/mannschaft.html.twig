{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="col-xs-12 col-md-12">
            <div class="box-blue">
            <h1>Unsere Mannschaft</h1>
                <div class="col-xs-12 col-md-12">
                    <img src="/uploads/players/2338.jpg" class="thumbnail img-responsive" />
                </div>
            {% for user in users %}
                <div class="col-xs-12 col-md-4">
                    <div class="thumbnail">
                      <img src="/uploads/players/{{user.fotoid}}{{user.mimeType}}" >
                      <div class="caption">
                        <h3>{{ user.firstName }} {{ user.name }} </h3>
                        <p>{{ user.position }}</p>
                      </div>
                    </div>
                </div>
            {% endfor %} 
            </div>
        </div>
    </div>
{% endblock %}  